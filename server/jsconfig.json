    "target": "esnext",
    "module": "commonjs",
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules"]
}
